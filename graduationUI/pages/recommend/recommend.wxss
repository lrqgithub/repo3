.top {
		background: #FFFFFF;
		display: flex;
		flex-flow: row;
		justify-content: space-between;
		align-items: center;
		padding: 5px 10px;
		box-sizing: border-box;
    border-bottom: solid 6px #efeeee;
	
	}
  .container{
    background: #f2f2f2;
	display: flex;
		flex-flow: column;
		
  }
	.look {
		height: 65rpx;
		display: flex;
		flex-flow: row;
		justify-content: center;
		align-items: center;
		background: #efeeee;
		flex: 1;
		border-radius: 8px;
		margin-right: 5px;
		box-sizing: border-box;
	}
	
	.top input {
		flex: 1;
	
	}
	.top span{
    margin: 0 10rpx;
    box-sizing: border-box;
  }
	.top button {
		background: #FFFFFF;
		display: block;
	font-size: 25rpx;
    border-radius: 15rpx;
		border: solid 1px #efeeee;
	}

	page {
		background-color: #FFFFFF;
	}

	.banner image {
		display: block;
		width: 100%;
	}

	.content {

		overflow-x: hidden;
		overflow-y: auto;
		background-color: #efefef;

	}
  .product{
		width: 95%;
		margin: 0 auto;
		display: flex;
		flex-flow: row wrap; 
		justify-content: space-between;
	}
	.product_{
		width: 48%;
		background: #fff;
		margin: 20rpx 0;
		padding: 10px;
		box-sizing: border-box;
	}
	.product_ image{
		width: 280rpx;
		height: 200rpx;
		display: block;
	}
	.price{
		display: flex;
    flex-flow: row;
		justify-content: space-between;
    align-items: center;
	}